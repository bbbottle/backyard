{
  "version": 2,
  "name": "api-grocery",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@now/node"
    }
  ],
  "build": {
    "env": {
      "NPM_RC": "registry=https://registry.npmjs.org\n//registry.npmjs.org/:_authToken=8062bd84-069f-4a18-a698-0e45fa79a13b"
    }
  },
  "routes": [
    {"src": "/", "dest": "/api/index.js"},
    {
      "src": "/z/posts",
      "dest": "/api/z-blog/index.js"
    },
    {
      "src": "/z/post/update",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/z-blog/update_post.js"
    }
  ]
}
